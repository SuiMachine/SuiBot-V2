<Window x:Class="SuiBot_V2_Windows.Windows.EditChannel.Dialogs.AddEditQuoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuiBot_V2_Windows.Windows.EditChannel.Dialogs"
        mc:Ignorable="d"
        Title="AddEditQuoteDialog" Height="302.161" Width="254.035">
    <Grid>
        <Label Content="Author:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="64,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Author}"/>
        <Label Content="Quote:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="10,67,10,40" TextWrapping="Wrap" Text="{Binding Text}"/>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="Button_OKClicked"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_CancelClicked"/>

    </Grid>
</Window>
